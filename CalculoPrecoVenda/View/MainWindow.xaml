<Window x:Class="CalculoPrecoVenda.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculoPrecoVenda"
        
        mc:Ignorable="d"
        Title="Cálculo do Preço de Venda" Width="1380" Height="840" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Window.Resources>
        <local:NumberFormatter x:Key="myNumberFormatter"/>
        <local:MultiplyConverter x:Key="myMultiplyConverter"/>
        <local:SumConverter x:Key="mySumConverter"/>
        <local:SubtractConverter x:Key="mySubtractConverter"/>
        <local:PisConverter x:Key="myPisConverter"/>
        <local:CofinsConverter x:Key="myCofinsConverter"/>
        <local:IcmsEntradaConverter x:Key="myIcmsEntradaConverter"/>
        <local:IcmsSaidaConverter x:Key="myIcmsSaidaConverter"/>
        <local:CalcPrecoReposicaoConverter x:Key="myCalcPrecoReposicaoConverter"/>
        <local:AliquotaIcmsConverter x:Key="myAliquotaIcmsConverter"/>
        <local:DifalConverter x:Key="myDifalConverter"/>

        <Storyboard x:Key="flashAnimation" >
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" AutoReverse="True" Duration="0:0:1.0" RepeatBehavior="Forever" />
        </Storyboard>

        <Style x:Key="textboxBCReduzidaSaida" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsChecked, ElementName=chkImportadoZfm}" Value="True"/>
                        <Condition Binding="{Binding IsChecked, ElementName=chkClienteZfm}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="ExtraBold"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsChecked, ElementName=chkPpb}" Value="True"/>
                        <Condition Binding="{Binding IsChecked, ElementName=radClienteNacional}" Value="True"/>
                        <Condition Binding="{Binding IsChecked, ElementName=radPessoaFisica}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="ExtraBold"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsChecked, ElementName=chkPpb}" Value="True"/>
                        <Condition Binding="{Binding IsChecked, ElementName=radClienteLocal}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="ExtraBold"/>
                </MultiDataTrigger>

            </Style.Triggers>
        </Style>

    </Window.Resources>

    <StackPanel Margin="5">
        <Label Content="Cálculo de Preço de Venda" FontFamily="SegoeUI" FontSize="20" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="5"/>

        <StackPanel Orientation="Horizontal" Margin="5,0,5,5" >

            <GroupBox Name="grpFornecedor" Header="Fornecedor" Height="240" Width="270" Margin="10,0,20,0">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                    <RadioButton x:Name="radForEstrangeiro" GroupName="Fornecedor" Content="Estrangeiro" Checked="radForEstrangeiro_Checked"/>
                    <RadioButton x:Name="radForNacional" GroupName="Fornecedor" Content="Nacional" Checked="radForNacional_Checked"/>
                    <RadioButton x:Name="radForLocal" GroupName="Fornecedor" Content="Local" Checked="radForLocal_Checked" />
                    <Label Content="UF :" Margin="10,5,0,0"/>
                    <ComboBox Name="cbolistaUfForn" VerticalAlignment="Center" HorizontalAlignment="Left" Width="80" Margin="10,5,0,0"
                              ItemsSource="{Binding}" DisplayMemberPath="SiglaUf" SelectedValuePath="SiglaUf" SelectedValue="SiglaUf" DropDownClosed="cbolistaUfForn_DropDownClosed" />
                    <Label Content="Situação Especial" Margin="10,5,0,0"/>
                    <Line Stroke="DarkBlue" StrokeThickness="2" X1="5" X2="220" Margin="5"/>
                    <CheckBox x:Name="chkMicroempresa" Content="Microempresa" Margin="10,0,0,0" Checked="chkMicroempresa_Checked" Unchecked="chkMicroempresa_Unchecked"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Name="grpProduto" Header="Produto" Height="240" Width="520" Margin="0,0,20,0">
                <Grid Margin="0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton Grid.Row="0" Grid.Column="0" x:Name="radProdEstrangeiro" Content="Estrangeiro" Margin="10,5,0,0" Checked="radProdEstrangeiro_Checked"/>
                    <RadioButton Grid.Row="1" Grid.Column="0" x:Name="radProdNacional" Content="Nacional" Margin="10,5,0,0" Checked="radProdNacional_Checked"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Tipo Especial" Margin="10,5,0,5"/>
                    <Line Grid.Row="3" Grid.Column="0" Stroke="DarkBlue" StrokeThickness="2" X1="5" X2="130"/>
                    <CheckBox Grid.Row="3" Grid.Column="0" x:Name="chkMotoresAte90Hp" Content="Motores até 90 HP" Margin="10,5,0,0" Checked="chkMotoresAte90Hp_Checked" />
                    <CheckBox Grid.Row="4" Grid.Column="0" x:Name="chkMotoresAcima90Hp" Content="Motores acima 90 HP" Margin="10,5,0,0" Checked="chkMotoresAcima90Hp_Checked"  />
                    <CheckBox Grid.Row="5" Grid.Column="0" x:Name="chkPecas" Content="Peças Motor Popa" Margin="10,5,0,0" Checked="chkPecas_Checked" />
                    <CheckBox Grid.Row="6" Grid.Column="0" x:Name="chkEmbarcacoes" Content="Embarcações" Margin="10,5,0,0" Checked="chkEmbarcacoes_Checked" />


                    <Label Grid.Row="2" Grid.Column="1" Content="Situação Especial" Margin="10,5,0,5"/>
                    <Line Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Stroke="DarkBlue" StrokeThickness="2" X1="5" X2="320"/>
                    <CheckBox Grid.Row="3" Grid.Column="1" Name="chkItensFcp" Content="Item com FCP" Margin="10,5,0,0"/>
                    <CheckBox Grid.Row="3" Grid.Column="2" x:Name="chkPpb" Content="Item com PPB" Margin="10,5,0,0" Checked="chkPpb_Checked"/>
                    <CheckBox Grid.Row="4" Grid.Column="1" Name="chkCorredor" Content="Corredor de Importação" Margin="10,5,0,0" Checked="chkCorredor_Checked"/>
                    <CheckBox Grid.Row="5" Grid.Column="1" Name="chkImportadoZfm" Content="Importado para ZFM" Margin="10,5,0,0" Checked="chkImportadoZfm_Checked"/>
                    <CheckBox Grid.Row="6" Grid.Column="1" Name="chkSubstTribut" Content="Substituição Tributária" Margin="10,5,0,0" Checked="chkSubstTribut_Checked"
                              IsChecked="{Binding chkSubstTribut_Checked}"/>

                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtNcm" Text="{Binding CodNcm}" BorderThickness="2" Margin="0,0,10,0" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding NomeNcm}" Foreground="Black" FontSize="20" Name="txbNomeNcm" VerticalAlignment="Center"/>
                    <Button Grid.Row="0" Grid.Column="2" Name="btnPesquisarNcm" Height="30" Width="50" VerticalAlignment="Center" HorizontalAlignment="Left" 
                            Content="NCM" Click="btnPesquisarNcm_Click">
                    </Button>
                </Grid>
            </GroupBox>

            <GroupBox x:Name="grpCliente" Header="Ciente" Height="240" Width="500" HorizontalAlignment="Left">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="145*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal">
                        <Label Grid.Row="2" Grid.Column="2" Content="UF:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,10,0"/>
                        <ComboBox Grid.Row="2" Grid.Column="3" Name="cbolistaUf" VerticalAlignment="Center" Width="80" 
                              ItemsSource="{Binding}" DisplayMemberPath="SiglaUf" SelectedValuePath="SiglaUf" SelectedValue="SiglaUf" DropDownClosed="cbolistaUf_DropDownClosed" />
                    </StackPanel>

                    <CheckBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Name="chkClienteZfm" Content="Venda na ZFM" IsEnabled="False" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <RadioButton Grid.Row="0" Grid.Column="2"  Name="radPessoaJurídica" GroupName="Pessoa" Content="Pessoa Jurídica" VerticalAlignment="Center" Margin="10,0,0,0" Checked="radPessoaJurídica_Checked" />
                    <RadioButton Grid.Row="0" Grid.Column="3" Name="radPessoaFisica" GroupName="Pessoa" Content="Pessoa Física" VerticalAlignment="Center" Margin="10,0,0,0" Checked="radPessoaFisica_Checked"/>
                    <RadioButton Grid.Row="0" Grid.Column="0" Name="radClienteEstrangeiro" GroupName="Cliente" Content="Estrangeiro" VerticalAlignment="Center" Margin="10,0,0,0" Checked="radClienteEstrangeiro_Checked"/>
                    <RadioButton Grid.Row="1" Grid.Column="0" Name="radClienteNacional" GroupName="Cliente" Content="Nacional" VerticalAlignment="Center" Margin="10,0,0,0" Checked="radClienteNacional_Checked" />
                    <RadioButton Grid.Row="2" Grid.Column="0" Name="radClienteLocal" GroupName="Cliente" Content="Local" VerticalAlignment="Center" Margin="10,0,0,0" Checked="radClienteLocal_Checked" />
                    <CheckBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Name="chkContribuinte" Content="PJ Não Contribuinte / Órgão Público" IsEnabled="False" VerticalAlignment="Center" Margin="10,0,0,0" />
                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"  Content="Items com FCP na UF selecioanda:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Name="txtItemsFcp" BorderThickness="2" Margin="10,5,0,0" TextAlignment="Left"
                             Text="{Binding SelectedItem.ItensFcp, ElementName=cbolistaUf}"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Name="grpCusto" Header="Custos" Width="410" Height="500" Margin="10,0,20,0" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"
                      VerticalAlignment="Top" HorizontalAlignment="Left">
                <Grid Margin="5,5,0,0" Name="grdPrecoReposicao" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="125"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--<Labels>-->
                    <Label Grid.Row="0" Grid.Column="0" Content="Valor da Nota" VerticalAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="(-) ICMS"  VerticalAlignment="Center"/>
                    <Line  Grid.Row="2" Grid.Column="3" Stroke="DarkBlue" StrokeThickness="3" X1="0" X2="150" />
                    <Label Grid.Row="2" Grid.Column="0" Content="(=) Valor Líquido"  VerticalAlignment="Center"/>
                    <Label Grid.Row="3" Grid.Column="0" Content="(+) Frete" VerticalAlignment="Center"/>
                    <Label Grid.Row="4" Grid.Column="0" Content="(+) Outras Despesas"  VerticalAlignment="Center"/>
                    <Label Grid.Row="5" Grid.Column="0" Content="(+) Subs Tributária"  VerticalAlignment="Center"/>
                    <Label Grid.Row="6" Grid.Column="0" Content="(+) Pis Importação"  VerticalAlignment="Center"/>
                    <Label Grid.Row="7" Grid.Column="0" Content="(+) Cofins Importação"  VerticalAlignment="Center"/>
                    <Label Grid.Row="8" Grid.Column="0" Content="(+) Capatazia"  VerticalAlignment="Center"/>
                    <Label Grid.Row="9" Grid.Column="0" Content="(+) Contr FTI"  VerticalAlignment="Center"/>
                    <Label Grid.Row="10" Grid.Column="0" Content="(+) II Suspenso"  VerticalAlignment="Center"/>
                    <Label Grid.Row="11" Grid.Column="0" Content="(+) IPI Suspenso"  VerticalAlignment="Center"/>
                    <Line  Grid.Row="12" Grid.Column="3" Stroke="DarkBlue" StrokeThickness="3" X1="0" X2="150"/>
                    <Label Grid.Row="12" Grid.Column="0" Content="(=) Custo de Reposição"  VerticalAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>
                    <Label Grid.Row="5" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>
                    <Label Grid.Row="6" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>
                    <Label Grid.Row="7" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>
                    <Label Grid.Row="8" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>
                    <Label Grid.Row="9" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>
                    <Label Grid.Row="10" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>
                    <Label Grid.Row="11" Grid.Column="2" Content="%"  VerticalAlignment="Center" Margin="5,0"/>

                    <!--<TextBox com Percentuais>-->

                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtPercentIcms"  VerticalAlignment="Center" Margin="5,0" 
                             PreviewTextInput="NumberValidationTextBox" IsEnabled="False">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource myAliquotaIcmsConverter}" ConverterParameter='n2'>
                                <Binding Path="IsChecked" ElementName="radForEstrangeiro"/>
                                <Binding Path="IsChecked" ElementName="radForNacional"/>
                                <Binding Path="IsChecked" ElementName="radForLocal"/>
                                <Binding Path="IsChecked" ElementName="chkMicroempresa"/>
                                <Binding Path="IsChecked" ElementName="radProdEstrangeiro"/>
                                <Binding Path="IsChecked" ElementName="radProdNacional"/>
                                <Binding Path="IsChecked" ElementName="chkMotoresAte90Hp"/>
                                <Binding Path="IsChecked" ElementName="chkMotoresAcima90Hp"/>
                                <Binding Path="IsChecked" ElementName="chkPecas"/>
                                <Binding Path="IsChecked" ElementName="chkEmbarcacoes"/>
                                <Binding Path="IsChecked" ElementName="chkCorredor"/>
                                <Binding Path="IsChecked" ElementName="chkImportadoZfm"/>
                                <Binding Path="IsChecked" ElementName="chkSubstTribut"/>
                                <Binding Path="IsChecked" ElementName="chkPpb"/>
                                <Binding Path="SelectedItem" ElementName="cbolistaUfForn"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBox Grid.Row="5" Grid.Column="1" Name="txtPercentSusbsTribut"  VerticalAlignment="Center" Margin="5,0" 
                             PreviewTextInput="NumberValidationTextBox" Text="0,00" IsEnabled="False">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=chkSubstTribut}" Value="True">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Text" Value="{Binding ElementName=txtNcm, Path=DataContext.SubstTribut, FallbackValue='0,00', TargetNullValue='0,00', Converter={StaticResource myNumberFormatter}, ConverterParameter='n2'}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox Grid.Row="6" Grid.Column="1" Name="txtPercentPis"  VerticalAlignment="Center" Margin="5,0" IsEnabled="False">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource myPisConverter}" ConverterParameter='n2'>
                                <Binding Path="IsChecked"  ElementName="radForEstrangeiro"/>
                                <Binding Path="IsChecked" ElementName="chkPecas"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBox Grid.Row="7" Grid.Column="1" Name="txtPercentCofins" VerticalAlignment="Center" Margin="5,0" IsEnabled="False">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource myCofinsConverter}" ConverterParameter='n2'>
                                <Binding Path="IsChecked"  ElementName="radForEstrangeiro"/>
                                <Binding Path="IsChecked" ElementName="chkPecas"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBox Grid.Row="8" Grid.Column="1" Name="txtPercentCapatazia"  VerticalAlignment="Center" Margin="5,0" IsEnabled="False">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Text" Value="0,00"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=radForEstrangeiro}" Value="True">
                                        <Setter Property="Text" Value="{Binding Source={StaticResource Settings}, Path=Default.Capatazia, 
                                                Converter={StaticResource myNumberFormatter}, ConverterParameter='n2'}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox Grid.Row="9" Grid.Column="1" Name="txtPercentFti"  VerticalAlignment="Center" Margin="5,0" IsEnabled="False">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Text" Value="0,00"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=radForEstrangeiro}" Value="True">
                                        <Setter Property="Text" Value="{Binding Source={StaticResource Settings}, Path=Default.Fti, 
                                                Converter={StaticResource myNumberFormatter}, ConverterParameter='n2'}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>



                    <TextBox Grid.Row="10" Grid.Column="1" Name="txtPercentIiSuspenso"  VerticalAlignment="Center" Margin="5,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Text" Value="0,00"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=chkCorredor}" Value="True">
                                        <Setter Property="Text" Value="{Binding ElementName=txtNcm, Path=DataContext.ImpImportacao, FallbackValue='0,00', TargetNullValue='0,00', Converter={StaticResource myNumberFormatter}, ConverterParameter='n2'}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox Grid.Row="11" Grid.Column="1" Name="txtPercentIpiSuspenso"  VerticalAlignment="Center" Margin="5,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Text" Value="0,00"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=chkCorredor}" Value="True">
                                        <Setter Property="Text" Value="{Binding ElementName=txtNcm, Path=DataContext.Ipi, FallbackValue='0,00', TargetNullValue='0,00', Converter={StaticResource myNumberFormatter}, ConverterParameter='n2'}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>

                    </TextBox>

                    <!--<TextBox com Valores>-->

                    <TextBox Grid.Row="0" Grid.Column="3" Name="txtValorNF" VerticalAlignment="Center" Margin="5,0" 
                             PreviewTextInput="NumberValidationTextBox" 
                             Text="{Binding ValorNota, Converter={StaticResource myNumberFormatter}, ConverterParameter='n2' }" />

                    <TextBox Grid.Row="1" Grid.Column="3" Name="txtIcms"  VerticalAlignment="Center" Margin="5,0">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource myIcmsEntradaConverter}" ConverterParameter='n2'>
                                <Binding Path="Text" ElementName="txtValorNF"/>
                                <Binding Path="Text" ElementName="txtPercentIcms"/>
                                <Binding Path="IsChecked" ElementName="chkPpb"/>
                                <Binding Path="IsChecked" ElementName="chkImportadoZfm"/>
                                <Binding Path="IsChecked" ElementName="chkMotoresAte90Hp"/>
                                <Binding Path="IsChecked" ElementName="chkEmbarcacoes"/>
                                <Binding Path="IsChecked" ElementName="chkPecas"/>
                            </MultiBinding>
                        </TextBox.Text>
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=chkPpb}" Value="True">
                                        <Setter Property="Foreground"  Value="Red"/>
                                        <Setter Property="FontWeight" Value="ExtraBold"/>
                                    </DataTrigger>

                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsChecked, ElementName=chkImportadoZfm}" Value="True"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=radForLocal}" Value="True"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=chkMotoresAte90Hp}" Value="False"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=chkEmbarcacoes}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="ExtraBold"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox Grid.Row="2" Grid.Column="3" Name="txtValorLiquido"  VerticalAlignment="Center" Margin="5,7,5,2">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource mySubtractConverter}" ConverterParameter='n2'>
                                <Binding Path="Text" ElementName="txtValorNF"/>
                                <Binding Path="Text" ElementName="txtIcms"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBox Grid.Row="3" Grid.Column="3" Name="txtFrete"  VerticalAlignment="Center" Margin="5,0"
                             Text="{Binding Frete, Converter={StaticResource myNumberFormatter}, ConverterParameter='n2'}" 
                             PreviewTextInput="NumberValidationTextBox"/>

                    <TextBox Grid.Row="4" Grid.Column="3" Name="txtOutrasDespesas"  VerticalAlignment="Center" Margin="5,0"
                             Text="{Binding OutrasDespesas, Converter={StaticResource myNumberFormatter}, ConverterParameter='n2'}" PreviewTextInput="NumberValidationTextBox"/>

                    <TextBox Grid.Row="5" Grid.Column="3" Name="txtSubstTribut"  VerticalAlignment="Center" Margin="5,0">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource myMultiplyConverter}" ConverterParameter='n2'>
                                <Binding Path="Text" ElementName="txtValorNF"/>
                                <Binding Path="Text" ElementName="txtPercentSusbsTribut"/>
                            </MultiBinding>
                        </TextBox.Text>
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=chkSubstTribut}" Value="True">
                                        <Setter Property="Foreground"  Value="Red"/>
                                        <Setter Property="FontWeight" Value="ExtraBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBox Grid.Row="6" Grid.Column="3" Name="txtPisImp"  VerticalAlignment="Center" Margin="5,0">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource myMultiplyConverter}" ConverterParameter='n2'>
                                <Binding Path="Text" ElementName="txtValorNF"/>
                                <Binding Path="Text" ElementName="txtFrete"/>
                                <Binding Path="Text" ElementName="txtPercentPis"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>


                    <TextBox Grid.Row="7" Grid.Column="3" Name="txtCofinsImp"  VerticalAlignment="Center" Margin="5,0">
                        <TextBox.Text>
                            <MultiBinding Converter="{StaticResource myMultiplyConverter}" ConverterParameter='n2'>
                                <Binding Path="Text" ElementName="txtValorNF"/>
                                <Binding Path="Text" ElementName="txtFrete"/>
                                <Binding Path="Text" ElementName="txtPercentCofins"/>
                            </MultiBinding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBox Grid.Row="8" Grid.Column="3" Name="txtCapatazia" VerticalAlignment="Center" Margin="5,0">
                        <TextBox.Text>
