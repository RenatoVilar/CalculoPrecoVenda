                        <Label.Style>
                            <Style TargetType="{x:Type Label}">
                                <Setter Property="Visibility" Value="Hidden" />

                                <Style.Triggers>

                                    <DataTrigger Binding="{Binding IsChecked, ElementName=chkSubstTribut}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Content" Value="Aviso: Informe a alíquota de MVA da Subst Tributária!"/>
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard Name="flash0" Storyboard="{StaticResource flashAnimation}"/>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <StopStoryboard BeginStoryboardName="flash0"/>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding IsChecked, ElementName=chkPpb}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Content" Value="Base de Cálculo Reduzida - Carga Tributária de 7%"/>
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard Name="flash1" Storyboard="{StaticResource flashAnimation}"/>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <StopStoryboard BeginStoryboardName="flash1"/>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>

                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsChecked, ElementName=chkImportadoZfm}" Value="True"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=radForLocal}" Value="True"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=chkMotoresAte90Hp}" Value="False"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=chkEmbarcacoes}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Content" Value="Base de Cálculo Reduzida - Carga Tributária de 7%"/>
                                        <MultiDataTrigger.EnterActions>
                                            <BeginStoryboard Name="flash2" Storyboard="{StaticResource flashAnimation}"/>
                                        </MultiDataTrigger.EnterActions>
                                        <MultiDataTrigger.ExitActions>
                                            <StopStoryboard BeginStoryboardName="flash2"/>
                                        </MultiDataTrigger.ExitActions>
                                    </MultiDataTrigger>

                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsChecked, ElementName=chkMicroempresa}" Value="True"/>
                                            <Condition Binding="{Binding Text, ElementName=txtPercentIcms}" Value="0,00"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Setter Property="Content" Value="Aviso: Informe o crédito da Microempresa!"/>
